.row
  .col-xs-10.col-xs-offset-1
    %table.table.table-striped
      %thead
        %tr
          %th{:style => "width: 60px"} Image
          %th{:style => "width: 60px"} Price
          %th{:style => "width: 60px"} Date
          %th Message
      %tbody
        - @messages.each do |message|
          %tr
            %td
              =image_tag message.listing.picture, width: 50,height:50, class: 'img-responsive'
            %td
              =message.listing.price
            %td
              =message.updated_at.strftime('%m-%d-%Y %H:%M:%S')
            %td{:style => "width: 200px"}
              =message.message


= render :partial => 'listings/modals/contact'
