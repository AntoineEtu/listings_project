- if @user.errors.any?
  .row
    .col-xs-8.col-xs-offset-2.errors
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  %br/
.row
  .col-xs-6.well
    = form_for @user, url: account_user_path(current_user.id), method: 'patch' do |f|
      .form-group
        = f.label :email, class:'form-label required'
        = f.text_field :email, class:'form-control'

      .form-group
        = f.label :firstname, t('firstname'), class:'form-label required'
        = f.text_field :firstname, class:'form-control'

      .form-group
        = f.label :lastname, t('lastname'), class:'form-label required'
        = f.text_field :lastname, class:'form-control'

      .form-group
        = f.submit t('save'), class:'btn btn-primary pull-right'

  .col-xs-5.col-xs-offset-1.well
    = form_for @user, url: account_user_path(@user), method: 'put' do |f|
      = f.hidden_field :reset_password_token
      .form-group
        = f.label :password, t('new_password'), class:'form-label required'
        = f.password_field :password, autocomplete: "off", class:'form-control'
      .form-group
        = f.label :password_confirmation, t('confirm_new_password'), class:'form-label required'
        = f.password_field :password_confirmation, autocomplete: "off", class:'form-control'
      .form-group
        = f.submit t('save'), class:'btn btn-primary pull-right'
