.modal.fade{"aria-labelledby" => "myModalLabel", "data-is" => "contactModal", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      = form_tag contacts_path method: 'post', data: {is: 'contactForm'} do
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4#myModalLabel.modal-title Contact seller
        .modal-body
          .form-group
            %label= t('your message')
            = text_area_tag 'message', nil, class: 'form-control'
        .modal-footer
          = submit_tag 'Send', class: 'btn btn-primary pull-right'
